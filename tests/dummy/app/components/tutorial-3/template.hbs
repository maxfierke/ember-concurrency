<div class="tutorial-example">

{{! BEGIN-SNIPPET better-syntax-4.hbs }}
  <button class="button" onclick={{action 'findStores'}}>
    Find Nearby Stores
    {{#if isFindingStores}}
      {{loading-spinner}}
    {{/if}}
  </button>

  {{#if result}}
    <ul>
      {{#each result.stores as |s|}}
        <li>
          <strong>{{s.name}}</strong>:
          {{s.distance}} miles away
        </li>
      {{/each}}
    </ul>
  {{/if}}
{{! END-SNIPPET }}
</div>
